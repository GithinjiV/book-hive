<% content_for :title, @book.title %>

<div class="container mx-auto px-4 md:px-8 min-h-screen py-12">
  <nav class="flex items-center text-gray-500 mb-8" aria-label="Breadcrumb">
    <%= link_to "Books", books_path, class: "hover:text-green-600 transition-colors duration-200" %>
    <svg class="mx-3 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
    <span class="text-gray-900">Book Details</span>
  </nav>



  <div class="bg-white rounded-xl shadow-lg overflow-hidden max-w-7xl mx-auto w-full">
    <div class="p-4 sm:p-6 md:p-8">
      <div class="flex flex-col sm:flex-row justify-between items-start gap-4 sm:gap-6 mb-6 sm:mb-8">
        <h1 class="font-bold text-2xl sm:text-3xl text-gray-900 leading-tight"><%= @book.title %></h1>
        <% if Current.user.can_administer? %>
          <%= link_to edit_book_path(@book), class: "inline-flex items-center gap-2 bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-amber-500 hover:to-orange-500 text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-medium transition-all duration-200 shadow-md hover:shadow-lg hover:-translate-y-0.5 w-full sm:w-auto justify-center" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
            </svg>
            Edit Book
          <% end %>
        <% end %>
      </div>

      <div class="mb-6 sm:mb-8">
        <%= render @book %>

        <div class="flex flex-col sm:flex-row justify-between gap-3 sm:gap-4 pb-12 sm:pb-24">
          <%= link_to books_path,
            class: "inline-flex items-center gap-2 mt-4 bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-amber-500 hover:to-orange-500 text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-medium transition-all duration-200 shadow-md hover:shadow-lg hover:-translate-y-0.5 w-full sm:w-auto justify-center" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Back to Books
          <% end %>

          <% if Current.user.can_administer? %>
            <%= button_to @book,
              method: :delete,
              class: "inline-flex items-center gap-2 bg-red-100 hover:bg-red-200 text-red-700 px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-medium transition-all duration-200 hover:-translate-y-0.5 w-full sm:w-auto justify-center",
              data: { turbo_confirm: "Are you sure you want to delete this book?" } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
              Delete Book
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>