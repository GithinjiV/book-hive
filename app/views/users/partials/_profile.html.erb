<div class="group bg-white min-h-screen rounded-2xl shadow-sm overflow-hidden">
  <div class="p-1 pb-0 ">
    <img class="rounded-xl w-full object-cover h-32" src="<%= image_url 'user_placeholder.png' %>" alt="profile"  />
  </div>

  <div class="-mt-12 p-6 pt-0">
    <img class="group-hover:scale-110 transition duration-300 rounded-full h-20 w-20 outline outline-white" src="<%= image_url 'user_placeholder.png' %>" alt="profile"  />
    <p class="font-semibold mt-4"><%= @user.name.full %></p>
    <p class="text-sm text-gray-800"><%= @user.email_address %></p>
  </div>

  <div>
    <div class="flex justify-between items-center p-6">
      <h2 class="text-xl font-semibold mb-4">Currently Borrowed Books</h2>
    </div>
    <div class="border-t border-gray-200"></div>
    <div class="p-6">
      <% if @current_borrowings.any? %>
        <%= render partial: "users/partials/borrowings_list", locals: { borrowings: @current_borrowings } %>
      <% else %>
        <p class="text-gray-600">You have no borrowed books.</p>
      <% end %>
    </div>
  </div>

</div>