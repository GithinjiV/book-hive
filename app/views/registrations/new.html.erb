<div class="flex justify-center items-center">
  <%= form_for(@user, url: registrations_path) do |f| %>
  <div class="space-y-12 bg-slate-50 flex pt-8">
    <div class="border rounded-lg border-gray-900/10 p-16 mx-auto">
      <h2 class="text-base text-center font-semibold leading-7 text-gray-900">Create your account</h2>
      <p class="text-sm text-center leading-7 text-gray-900">Already have an account? <%= link_to "Log in", new_session_path, class:"font-semibold text-green-600 hover:text-green-500" %></p>
        <% if @user.errors.any? %>
        <div id="error_explanation" class="bg-red-50 border-l-4 border-red-500 p-6 rounded-lg mb-8">
          <div class="flex items-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <h2 class="text-lg font-semibold text-red-800">
              <%= pluralize(@user.errors.count, "error") %> prohibited this user from being created:
            </h2>
          </div>
          <ul class="list-disc ml-6 text-red-700 space-y-1">
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">

        <div class="sm:col-span-3">
          <%= f.label :first_name, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.text_field :first_name, autofocus: false, autocomplete: "first_name", class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset pl-4 ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :last_name, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.text_field :last_name, autofocus: false, autocomplete: "last_name", class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset pl-4 ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :email_address, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.email_field :email_address, autofocus: false, autocomplete: "email", required: true, class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset pl-4 ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :username, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.text_field :username, autofocus: false, autocomplete: false, class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset pl-4 ring-gray-300 placeholder:text-gray-400 focus:ring focus:ring-inset focus:ring-green-300 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :password, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.password_field :password, autocomplete: "new-password", required:true, class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset pl-4 ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6"%>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :password_confirmation, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", required:true, class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset pl-4 ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>
      </div>
      <div class="mt-4 flex items-center justify-end gap-x-6 py-4">
        <%= f.submit "Create your account", class:"flex w-full justify-center rounded-md bg-green-800 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600" %>
      </div>
    </div>
  </div>
<% end %>
</div>