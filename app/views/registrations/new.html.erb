<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<%= form_for @user, url: registrations_path do |form| %>
  <div>
    <%= form.label :first_name, "First Name:" %>
    <%= form.text_field :first_name, autofocus:false %>
  </div>

  <div>
    <%= form.label :last_name, "Last Name" %>
    <%= form.text_field :last_name, autofocus:false %>
  </div>

  <div>
    <%= form.label :username, "Username" %>
    <%= form.text_field :username, autofocus:false %>
  </div>

  <div>
    <%= form.label :email_address, "Email" %>
    <%= form.email_field :email_address, autofocus: false %>
  </div>

  <div>
    <div>
      <%= form.label :email, "Password:" %>
      <%= form.password_field :password, required: true %>
    </div>
    <div>
      <%= form.label :email, "Confirmation:" %>
      <%= form.password_field :password_confirmation, required: true %>
    </div>
  </div>

  <%= form.submit "Register" %>
<% end %>